# Configuration Template for CV Sender
# Copy this file to env.yaml and fill in your actual values
# DO NOT commit env.yaml to git!

# Email Configuration (for sending CV via email)
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  sender_email: "your-email@gmail.com"
  sender_password: "your-app-password"  # Use App Password, not regular password
  use_tls: true

# Recipient Configuration
recipients:
  - email: "hr@soprasteria.com"
    name: "HR Department Sopra Steria"
  - email: "recruiter@example.com"
    name: "Recruiter Name"

# CV File Paths
cv:
  pdf_path: "./assets/junyi-zhu-cv.pdf"
  cover_letter_path: "./assets/sollicitatiebrief.pdf"

# Personal Information
personal:
  name: "Junyi Zhu"
  email: "admin@cislink.nl"
  phone: "+31 6 8888 8188"
  location: "Groningen, Netherlands"
  github: "https://github.com/CislinkNL"
  linkedin: "https://linkedin.com/in/yourprofile"

# GCP Configuration (if using Cloud Functions)
gcp:
  project_id: "your-project-id"
  region: "europe-west1"
  function_name: "cv-sender"

# Firebase Configuration (optional)
firebase:
  api_key: "your-api-key"
  auth_domain: "your-project.firebaseapp.com"
  project_id: "your-project-id"
